{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3",
  "body": [
      {
          "type": "Container",
          "items": [
              {
                  "type": "TextBlock",
                  "text": "Choose which news audiences your would like to include in your personal feed",
                  "wrap": true,
                  "size": "Medium",
                  "separator": true
              }
          ],
          "spacing": "Medium"
      },
      {
          "type": "Container",
          "items": [
              {
                  "type": "Input.Toggle",
                  "title": "Diversity & Inclusion",
                  "id": "boxPayslip",
                  "value": "true",
                  "spacing": "Medium"
              },
              {
                  "type": "Input.Toggle",
                  "title": "Philantropy",
                  "id": "boxVacation",
                  "value": "true",
                  "spacing": "Medium"
              },
              {
                  "type": "Input.Toggle",
                  "title": "Technology tips",
                  "id": "boxBookDesk",
                  "value": "true",
                  "spacing": "Medium"
              },
              {
                  "type": "Input.Toggle",
                  "title": "Wellbeing tips",
                  "id": "boxCafeteria",
                  "value": "true",
                  "spacing": "Medium"
              }
          ],
          "spacing": "Medium",
          "separator": true
      },
      {
          "type": "Container",
          "items": [
              {
                  "type": "RichTextBlock",
                  "inlines": [
                      {
                          "type": "TextRun",
                          "text": "NOTE: ",
                          "weight": "Bolder"
                      },
                      {
                          "type": "TextRun",
                          "text": "Changes may take a few hours to reflect"
                      }
                  ]
              }
          ],
          "spacing": "Medium",
          "style": "emphasis"
      }
  ]
}